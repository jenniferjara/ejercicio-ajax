<section class="container">
  <h1 class="text-center">Music Database</h1>
  <h2>Add a Song</h2>
  <p class="status"></p>
  <div class="errors"></div>
  <%= form_for(@music) do |f| %>
    <div class="field form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :artist %><br>
      <%= f.text_field :artist, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :year %><br>
      <%= f.text_field :year, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :genre %><br>
      <%= f.text_field :genre, :class => 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit :class => 'btn btn-primary' %>
    </div>
  <% end %>
  
  <h2>List of Songs</h2>
  <table class="table" id="music_list">
    <thead>
      <tr>
        <th>Title</th>
        <th>Artist</th>
        <th>Year</th>
        <th>Genre</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @musics.each do |music| %>
        <tr>
          <td><%= music.title %></td>
          <td><%= music.artist %></td>
          <td><%= music.year %></td>
          <td><%= music.genre %></td>
          <td><%= link_to 'x', music, method: :delete, class: 'music_delete close' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p class="no_music alert alert-warning text-center">No music yet... please, add some!</p>
</section>